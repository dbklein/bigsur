<h2>Posts</h2>

<div class="btn-group" role="group">
  <%= link_to("New Post", new_post_path) %>
</div>

<br></br>

<!-- http://getbootstrap.com/components/#thumbnails -->
<% if @posts.present? %>

    <% @posts.reverse.each do |post| %>
      <div class="well">
        <h2><%= post.title %></h2>
        <p>By <%= post.user.email %></p>
        <p><%= post.body %></p>
      </div>
    <% end %>

    <% else %>
      <div class="well">
        <p>Trip hasn't started yet</p>
      </div>
<% end %>
